{
  "generalConfiguration": {
    "sortOnBeforeSave": true
  },
  "importStringConfiguration": {
    "quoteMark": "double"
  },
  "sortConfiguration": {
    "removeUnusedImports": true,
    "defaultOrderLevel": 20,
    "customOrderingRules": {
      "rules": [
        {
          "type": "path",
          "regex": "[.](png|scss|less|css|jpg)$",
          "orderLevel": 100
        },
        {
          "regex": "^[@]?[\\w]",
          "orderLevel": 10
        },
        {
          "regex": "^(.|@)[/]",
          "orderLevel": 30
        }
      ]
    }
  }
}
